<GridPane id="user" alignment="CENTER" hgap="5.0" stylesheets="@../../StyleSheets/login-cadastro.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.module.Cadastro_Cliente">

    <padding>
        <Insets bottom="10.0" left="50.0" right="50.0" />
    </padding>
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" />
        <ColumnConstraints hgrow="SOMETIMES" prefWidth="350.0" />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints prefHeight="50.0" valignment="TOP" vgrow="NEVER" />
        <RowConstraints prefHeight="40.0" vgrow="NEVER" />
        <RowConstraints prefHeight="40.0" vgrow="NEVER" />
        <RowConstraints prefHeight="40.0" vgrow="NEVER" />
        <RowConstraints prefHeight="40.0" vgrow="NEVER" />
        <RowConstraints prefHeight="40.0" vgrow="NEVER" />
        <RowConstraints prefHeight="40.0" vgrow="NEVER" />
        <RowConstraints prefHeight="40.0" vgrow="NEVER" />
        <RowConstraints prefHeight="40.0" vgrow="NEVER" />
        <RowConstraints prefHeight="50.0" valignment="BOTTOM" vgrow="ALWAYS" />
    </rowConstraints>
    <children>
        <Label prefWidth="105.0" text="Cadastro de Produtos" GridPane.columnIndex="1">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <JFXTextField fx:id="TFCodigob" promptText="Codigo de barras" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <JFXTextField fx:id="TFnomep" promptText="Nome" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <JFXTextField fx:id="TFmarcap" promptText="Marca" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <JFXTextField fx:id="TFprecop" promptText="Preço" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <JFXTextField fx:id="TFquantidadep" promptText="Quantidade" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        <JFXTextField fx:id="TFfornecedorp" promptText="Fornecedor" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        <TextArea fx:id="TAdescricaop" promptText="Descrição produto" GridPane.columnIndex="1" GridPane.rowIndex="7" />
        <HBox alignment="CENTER" spacing="3.0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="9">
            <JFXButton defaultButton="true" onAction="#onCadastrar" prefHeight="40.0" prefWidth="220.0" text="cadastrar" HBox.hgrow="ALWAYS" />
            <JFXButton cancelButton="true" onAction="#onCancelar" prefHeight="40.0" prefWidth="220.0" text="cancelar" HBox.hgrow="ALWAYS" />
        </HBox>
        <Label text="Codigo de barras" GridPane.rowIndex="1" />
        <Label text="Nome do produto" GridPane.rowIndex="2" />
        <Label text="Marca" GridPane.rowIndex="3" />
        <Label text="Preço" GridPane.rowIndex="4" />
        <Label text="Quantidade" GridPane.rowIndex="5" />
        <Label text="Fornecedor" GridPane.rowIndex="6" />
        <Label text="Descrição" GridPane.rowIndex="7" />
    </children>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
</GridPane>
